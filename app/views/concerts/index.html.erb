<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th><%= Concert.human_attribute_name(:date) %></th>
            <th><%= Concert.human_attribute_name(:title) %></th>
            <th><%= Concert.human_attribute_name(:open_at) %></th>
            <th><%= Concert.human_attribute_name(:start_at) %></th>
            <th><%= Concert.human_attribute_name(:place) %></th>
            <th><%= Concert.human_attribute_name(:reservation) %></th>
            <th><%=t ".actions", default: t("helpers.actions") %></th>
        </tr>
    </thead>
    <tbody>
        <% @concerts.each do |c| %>
        <tr>
            <td><%= c.open_at.strftime("%Y-%m-%d") %></td>
            <td><%= c.title %></td>
            <td><%= c.open_at.strftime("%H:%M -") %></td>
            <td><%= c.start_at.strftime("%H:%M -") %></td>
            <td><%= c.place %></td>
            <td><%= link_to t(".Reservation", default: t("helpers.links.Reservation")), concerts_show_path(c), class: "btn btn-xs btn-primary" %></td>
            <td>
                <%= link_to "show", concerts_show_path(c) %>
                <% if login? %>
                <%= link_to "edit", concerts_edit_path(c) %>
                <%= link_to "remove", concerts_destroy_path(c), method: :delete, data: { confirm: t(".confirm", default: t("helpers.links.confirm", default: "Are you sure?")) } %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<% if login? %>
<%= link_to t(".new"), :concerts_new, class: "btn btn-primary" %>
<% end %>