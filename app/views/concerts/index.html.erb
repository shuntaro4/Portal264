<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th><%= Concert.human_attribute_name(:date) %></th>
            <th><%= Concert.human_attribute_name(:title) %></th>
            <th><%= Concert.human_attribute_name(:open_at) %></th>
            <th><%= Concert.human_attribute_name(:start_at) %></th>
            <th><%= Concert.human_attribute_name(:place) %></th>
            <th><%=t ".actions", default: t("helpers.actions") %></th>
        </tr>
    </thead>
    <tbody>
        <% @concerts.each do |c| %>
        <tr>
            <td><%= c.open_at.strftime("%Y-%m-%d") %></td>
            <td><%= c.title %></td>
            <td><%= c.open_at.strftime("%H:%M -") %></td>
            <td><%= c.start_at.strftime("%H:%M -") %></td>
            <td><%= c.place %></td>
            <td>
                <div class="btn-group">
                    <%= link_to concerts_show_path(c), class: 'btn btn-xs' do %>
                        <%= glyph "info-sign" %> 詳細
                    <% end %>
                    <% if signed_in? %>
                        <%= link_to concerts_edit_path(c), class: 'btn btn-xs' do %>
                            <%= glyph 'pencil' %>
                        <% end %>
                        <%= link_to concerts_destroy_path(c), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'コンサート情報を削除します。よろしいですか？')) }, class: 'btn btn-xs' do %>
                            <%= glyph 'remove' %>
                        <% end %>
                    <% end %>
                    <%= link_to reservations_new_path(c), class: 'btn btn-xs' do %>
                        <%= glyph "time" %> 予約
                    <% end %>
                    <% if signed_in? %>
                        <%= link_to reservations_index_path(concert_id: c.id), class: 'btn btn-xs' do %>
                            <%= glyph "list" %>
                        <% end %>
                    <% end %>
                </div>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<% if signed_in? %>
    <%= link_to t(".new"), :concerts_new, class: "btn btn-primary" %>
<% end %>

<%= render "layouts/footer" %>