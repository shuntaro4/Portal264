%section.resume-section.p-3.p-lg-5.d-flex.flex-column
  %h2 Index
  %table.table.table-hover
    %thead
      %tr
        %th Date
        %th Title
        %th Open
        %th Start
        %th Place
        %th

    %tbody
      - @concerts.each do |concert|
        %tr
          %td= concert.start_at.strftime("%Y-%m-%d")
          %td= concert.title
          %td= concert.open_at.strftime("%H:%M -")
          %td= concert.start_at.strftime("%H:%M -")
          %td= concert.place
          %td
            .btn-group
              = link_to concert, class: "btn btn-xs btn-outline-secondary" do
                %i.fa.fa-info-circle
                Detail
              - if signed_in?
                = link_to edit_concert_path(concert), class: "btn btn-xs btn-outline-secondary" do
                  %i.fa.fa-edit
                = link_to concert, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-outline-danger" do
                  %i.fa.fa-trash
                = link_to concert_reservations_path(concert), class: "btn btn-xs btn-outline-secondary" do
                  %i.fa.fa-list
              - if concert.active?
                = link_to new_concert_reservation_path(concert), class: "btn btn-xs btn-outline-secondary" do
                  %i.fa.fa-calendar
                  Reservation

  %br

  - if signed_in?
    .actions
      = link_to 'New', new_concert_path, class: "btn btn-primary"
