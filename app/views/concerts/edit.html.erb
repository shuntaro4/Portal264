<%= form_for @concert, html: { class: "form-horizontal" }, role: "form", url: concerts_update_path do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :open_at %>
        <%= f.datetime_select :open_at, use_month_numbers: true %>
    </div>
    <div class="form-group">
        <%= f.label :start_at %>
        <%= f.datetime_select :start_at, use_month_numbers: true %>
    </div>
    <div class="form-group">
        <%= f.label :place %>
        <%= f.text_field :place %>
    </div>
    <div class="form-group">
        <%= f.label :note %>
        <%= f.text_area :note %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to t('.cancel', default: t("helpers.links.cancel")), root_path, class: 'btn btn-default' %>
<% end %>
